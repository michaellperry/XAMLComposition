<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ValueConverters="using:XAMLComposition.ValueConverters" x:Class="XAMLComposition.Controls.UserGroupActivityControl" 
             mc:Ignorable="d" 
             d:DesignHeight="112" d:DesignWidth="360">
	<UserControl.Resources>
		<ValueConverters:DateFormatValueConverter x:Key="DateFormatValueConverter"/>
	</UserControl.Resources>
    <Border Background="#FF80809E">
		<Grid Margin="5">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="110"/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<TextBlock Text="{Binding Date, Converter={StaticResource DateFormatValueConverter}}" FontSize="21.333" Grid.Row="1" Margin="5"/>
			<TextBlock Text="{Binding Description}" FontSize="29.333" Grid.ColumnSpan="2" Margin="5"/>
			<TextBlock Text="{Binding UserGroup}" FontSize="21.333" Grid.Column="1" Grid.Row="1" Margin="5"/>
            
		</Grid>
	</Border>
</UserControl>
